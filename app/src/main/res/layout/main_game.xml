<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape">

    <TextView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="Your password is:"
        android:textSize="35dp"
        android:fontFamily="@font/disket_mono"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/finally_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="#######"
        android:fontFamily="@font/disket_mono"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/preview"/>

    <EditText
        android:id="@+id/your_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="155dp"
        android:fontFamily="@font/disket_mono"
        android:gravity="center"
        android:inputType="number"
        android:hint="Enter a possible password"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />

    <Button
        android:id="@+id/btnCheck"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/disket_mono"
        android:text="Check"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/your_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <TextView
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/your_num"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:text=""
        android:gravity="center"
        android:fontFamily="@font/disket_mono"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/win"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/check"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:text=""
        android:gravity="center"
        android:fontFamily="@font/disket_mono"
        android:textSize="35dp"
        />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/disket_mono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/win"
        android:text="Back"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/black"
        android:textSize="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>